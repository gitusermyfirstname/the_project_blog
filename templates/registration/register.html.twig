{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container center" style="display:flex; flex-direction:column; align-items:center;">
        <h1>Inscription</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'form-control', 'style': 'border:none'}}) }}
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email', 'class': 'form-control mb-3'}}) }}
                <span class="error">{{ form_errors(registrationForm.email) }}</span>
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control mb-3'}}) }}
                <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
            </div>
            <div class="input-field col s12 mb-3" style="display: flex; justify-content:center">
                <input type="submit" name="" class="btn btn-primary" value="Inscription">
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
